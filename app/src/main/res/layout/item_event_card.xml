<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dip"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium">

        <ImageView
            android:id="@+id/item_event_photo"
            android:layout_width="@dimen/event_photo_size"
            android:layout_height="@dimen/event_photo_size"
            android:layout_marginEnd="@dimen/padding_medium"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_below="@id/item_event_photo"
            android:layout_width="@dimen/event_photo_size"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_micro"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_event_icon_rsvp"
                android:padding="@dimen/padding_small"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                tools:ignore="ContentDescription" />

            <Space
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/item_event_icon_location"
                android:padding="@dimen/padding_small"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                tools:ignore="ContentDescription" />

        </LinearLayout>



        <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:id="@+id/item_event_avatar"-->
        <!--android:layout_width="@dimen/item_event_avatar_size"-->
        <!--android:layout_height="@dimen/item_event_avatar_size"-->
        <!--app:civ_border_color="#fff"-->
        <!--app:civ_border_width="0dp" />-->

        <LinearLayout
            android:id="@+id/item_event_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_event_photo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/item_event_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/item_event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/item_event_interested_maybe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
