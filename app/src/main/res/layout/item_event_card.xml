<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_event_container"
    android:padding="@dimen/padding_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_event_photo"
        android:layout_width="100dip"
        android:layout_height="80dip" />

    <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:id="@+id/item_event_avatar"-->
        <!--android:layout_width="@dimen/item_event_avatar_size"-->
        <!--android:layout_height="@dimen/item_event_avatar_size"-->
        <!--app:civ_border_color="#fff"-->
        <!--app:civ_border_width="0dp" />-->

    <LinearLayout
        android:id="@+id/item_event_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_event_photo"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_medium">

        <TextView
            android:id="@+id/item_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/item_event_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/item_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
    </LinearLayout>

</RelativeLayout>
