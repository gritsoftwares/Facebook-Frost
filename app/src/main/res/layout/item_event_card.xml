<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dip"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/padding_medium"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_event_photo"
            android:layout_width="100dip"
            android:layout_height="80dip"
            android:layout_marginEnd="@dimen/padding_medium"
            tools:ignore="ContentDescription" />

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:id="@+id/item_event_avatar"-->
        <!--android:layout_width="@dimen/item_event_avatar_size"-->
        <!--android:layout_height="@dimen/item_event_avatar_size"-->
        <!--app:civ_border_color="#fff"-->
        <!--app:civ_border_width="0dp" />-->

        <LinearLayout
            android:id="@+id/item_event_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_event_photo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/item_event_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <TextView
                android:id="@+id/item_event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
