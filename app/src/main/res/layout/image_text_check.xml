<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_text_check_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small_medium"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_text_check_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/image_text_check_text"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/padding_small"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="0dip"
        android:layout_height="1dip"
        android:minWidth="@dimen/padding_medium"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/image_text_check_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription" />
</LinearLayout>