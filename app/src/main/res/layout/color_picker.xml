<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/color_picker"
    android:layout_width="match_parent"
    android:padding="@dimen/frost_preference_padding"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/color_picker_text"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/color_picker_color"
        android:layout_width="@dimen/color_picker_preview_size"
        android:layout_height="@dimen/color_picker_preview_size"/>


</LinearLayout>