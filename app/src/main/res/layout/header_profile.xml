<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_profile_cover"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/header_profile_cover_desc"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/header_profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_profile_cover"
        android:layout_centerVertical="true"
        android:layout_marginStart="144dp"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:padding="@dimen/padding_medium"
        android:textSize="@dimen/big_text" />

    <ImageView
        android:id="@+id/header_profile_photo"
        android:layout_width="96dip"
        android:layout_height="96dip"
        android:layout_alignBottom="@id/header_profile_header"
        android:layout_marginBottom="@dimen/padding_medium"
        android:layout_marginStart="48dip"
        android:contentDescription="@string/header_profile_photo_desc" />

    <LinearLayout
        android:id="@+id/header_profile_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_profile_header"
        android:paddingBottom="@dimen/padding_small"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/header_profile_buttons_email"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/icon_button_padding"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/header_profile_buttons_gender"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/icon_button_padding"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/header_profile_buttons_birthday"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/icon_button_padding"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/header_profile_buttons_location"
            android:layout_width="@dimen/icon_button_size"
            android:layout_height="@dimen/icon_button_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/icon_button_padding"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>