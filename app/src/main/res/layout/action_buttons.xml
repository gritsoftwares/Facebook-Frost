<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/action_button_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/action_button_like_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/action_button_like_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/action_button_font_family"
            android:padding="@dimen/action_button_padding"
            android:text="@string/like"
            android:textSize="@dimen/action_button_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_button_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/action_button_comment_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/action_button_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/action_button_font_family"
            android:padding="@dimen/action_button_padding"
            android:text="@string/comment"
            android:textSize="@dimen/action_button_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_button_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/action_button_share_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/action_button_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/action_button_font_family"
            android:padding="@dimen/action_button_padding"
            android:text="@string/share"
            android:textSize="@dimen/action_button_text_size" />

    </LinearLayout>
</LinearLayout>